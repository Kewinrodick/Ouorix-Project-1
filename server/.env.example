# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ouorix-safety

# JWT Secret for authentication
JWT_SECRET=your_super_secure_jwt_secret_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://localhost:8545
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
NETWORK_ID=1337

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# External API Keys
MAPS_API_KEY=your_google_maps_api_key
WEATHER_API_KEY=your_weather_api_key

# AI/ML Configuration
AI_MODEL_PATH=./models/anomaly-detection-model
ML_CONFIDENCE_THRESHOLD=0.7

# IoT Configuration
IOT_BROKER_URL=mqtt://localhost:1883
IOT_USERNAME=iot_user
IOT_PASSWORD=iot_password

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/ouorix-server.log

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Emergency Services
EMERGENCY_PHONE=911
POLICE_API_ENDPOINT=https://api.police.gov/incidents
MEDICAL_API_ENDPOINT=https://api.medical.gov/emergency